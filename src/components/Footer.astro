---
// Footer.astro
const currentYear = new Date().getFullYear();
const email = "contact@insightgnosis.com";
---

<footer class="footer-section">
    <div class="top-scanline"></div>

    <div class="footer-wrapper">
        
        <div class="cta-container reveal-on-scroll">
            <div class="cta-header">
                <span class="mono-label">/// READY TO SCALE?</span>
                <span class="system-status">STATUS: READY TO EVOLVE</span>
            </div>
            <h2 class="cta-title">
                LET'S <br />
                <span class="text-gradient">EVOLVE</span>
            </h2>
        </div>

        <div class="email-interaction reveal-on-scroll">
            <div class="email-container" id="email-trigger" data-email={email}>
                <span class="copy-hint">CLICK TO COPY PROTOCOL</span>
                <span class="email-text">{email}</span>
                <span class="copy-feedback">COPIED TO CLIPBOARD</span>
                <div class="email-underline"></div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-column">
                <h4 class="column-title">SOCIAL_NETWORKS</h4>
                <div class="link-list">
                    <a href="#" class="footer-link">LINKEDIN <span class="arrow">↗</span></a>
                    <a href="#" class="footer-link">TWITTER_X <span class="arrow">↗</span></a>
                    <a href="#" class="footer-link">GITHUB <span class="arrow">↗</span></a>
                </div>
            </div>

            <div class="footer-column">
                <h4 class="column-title">SITEMAP_INDEX</h4>
                <div class="link-list">
                    <a href="/" class="footer-link">HOME_BASE</a>
                    <a href="/vision" class="footer-link">VISION_CORE</a>
                    <a href="/expertise" class="footer-link">EXPERTISE_NODES</a>
                </div>
            </div>

            <div class="footer-column copyright">
                <h4 class="column-title">LEGAL_ARCHIVE</h4>
                <p class="copyright-text">&copy; {currentYear} INSIGHT GNOSIS.</p>
                <p class="tagline">FORGING THE UNSEEN ARCHITECTURES.</p>
            </div>

            <div class="footer-column align-right">
                <button id="back-to-top" class="hud-scroll-btn" aria-label="Back to Top">
                    <span class="arrow">↑</span>
                    <div class="hud-corners"></div>
                </button>
            </div>
        </div>
    </div>
    
    <div class="footer-grid-overlay"></div>
</footer>

<script>
    // --- LÓGICA DE COPIAR CORREO ---
    const emailTrigger = document.getElementById('email-trigger');
    emailTrigger?.addEventListener('click', () => {
        const email = emailTrigger.getAttribute('data-email');
        if(email) {
            navigator.clipboard.writeText(email);
            emailTrigger.classList.add('copied');
            setTimeout(() => emailTrigger.classList.remove('copied'), 2000);
        }
    });

    // --- LÓGICA BACK TO TOP ---
    document.getElementById('back-to-top')?.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>

<style>
    .footer-section {
        position: relative;
        background-color: #050505;
        color: #fff;
        padding: clamp(4rem, 10vw, 8rem) 1.5rem 4rem 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        overflow: hidden;
    }

    .top-scanline {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 1px;
        background: linear-gradient(90deg, transparent, #38bdf8, transparent);
        animation: scanHorizontal 3s linear infinite;
    }

    @keyframes scanHorizontal {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .footer-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    /* --- CTA GIGANTE --- */
    .cta-container { margin-bottom: 4rem; }
    .cta-header { 
        display: flex; 
        justify-content: space-between; 
        align-items: center; 
        margin-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 1rem;
    }
    .mono-label { font-family: monospace; color: #38bdf8; letter-spacing: 2px; font-size: 0.8rem; }
    .system-status { font-family: monospace; color: #475569; font-size: 0.7rem; }
    
    .cta-title {
        font-family: 'Outfit', sans-serif;
        font-size: clamp(3.5rem, 12vw, 9rem);
        font-weight: 800;
        line-height: 0.85;
        letter-spacing: -0.04em;
        margin: 0;
    }

    .text-gradient {
        background: linear-gradient(135deg, #38bdf8 0%, #a78bfa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* --- EMAIL INTERACTIVO --- */
    .email-interaction { margin-bottom: 6rem; }
    .email-container {
        display: inline-block;
        position: relative;
        cursor: pointer;
    }

    .copy-hint { 
        display: block; 
        font-family: monospace; 
        font-size: 0.7rem; 
        color: #475569; 
        margin-bottom: 0.5rem; 
        letter-spacing: 1px;
    }

    .email-text {
        font-family: 'Outfit', sans-serif;
        font-size: clamp(1.2rem, 4vw, 2.5rem);
        color: #94a3b8;
        transition: all 0.3s ease;
    }

    .email-underline {
        width: 100%; height: 1px;
        background: rgba(255,255,255,0.1);
        margin-top: 8px;
        transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform-origin: left;
    }

    .email-container:hover .email-text { color: #fff; text-shadow: 0 0 20px rgba(56, 189, 248, 0.3); }
    .email-container:hover .email-underline { background: #38bdf8; transform: scaleX(1.05); }

    .copy-feedback {
        position: absolute; top: -20px; left: 0;
        font-family: monospace; font-size: 0.7rem; color: #22c55e;
        opacity: 0; transform: translateY(5px); transition: all 0.3s ease;
    }
    .email-container.copied .copy-feedback { opacity: 1; transform: translateY(0); }

    /* --- BOTTOM GRID --- */
    .footer-bottom {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        padding-top: 3rem;
        border-top: 1px solid rgba(255,255,255,0.05);
    }

    .column-title { 
        font-family: monospace; 
        font-size: 0.75rem; 
        color: #475569; 
        margin-bottom: 1.5rem; 
        letter-spacing: 2px;
    }
    
    .link-list { display: flex; flex-direction: column; gap: 0.8rem; }
    
    .footer-link {
        color: #94a3b8; text-decoration: none;
        font-size: 0.9rem; transition: all 0.2s;
        display: flex; align-items: center; gap: 5px;
    }
    .footer-link:hover { color: #38bdf8; transform: translateX(5px); }
    .arrow { font-size: 0.8rem; opacity: 0.5; }

    .copyright-text { font-size: 0.85rem; color: #f1f5f9; margin-bottom: 0.5rem; font-weight: 600; }
    .tagline { color: #475569; font-size: 0.75rem; font-family: monospace; }

    /* --- BOTÓN HUD --- */
    .hud-scroll-btn {
        position: relative;
        width: 50px; height: 50px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff; cursor: pointer;
        display: flex; align-items: center; justify-content: center;
        transition: all 0.3s ease;
    }

    .hud-corners::before, .hud-corners::after {
        content: ''; position: absolute; width: 8px; height: 8px;
        border: 1px solid #38bdf8;
    }
    .hud-corners::before { top: -1px; left: -1px; border-right: 0; border-bottom: 0; }
    .hud-corners::after { bottom: -1px; right: -1px; border-left: 0; border-top: 0; }

    .hud-scroll-btn:hover { background: rgba(56, 189, 248, 0.1); border-color: #38bdf8; transform: translateY(-5px); }

    /* --- GRID DECORATION --- */
    .footer-grid-overlay {
        position: absolute; inset: 0;
        background-image: radial-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 30px 30px;
        mask-image: linear-gradient(to top, black, transparent);
        z-index: 0; pointer-events: none;
    }

    /* RESPONSIVE FIXES */
    @media (max-width: 1024px) {
        .footer-bottom { grid-template-columns: repeat(2, 1fr); gap: 3rem; }
        .align-right { grid-column: span 2; display: flex; justify-content: center; padding-top: 2rem; }
    }

    @media (max-width: 640px) {
        .footer-bottom { grid-template-columns: 1fr; }
        .align-right { grid-column: span 1; }
        .cta-header { flex-direction: column; align-items: flex-start; gap: 0.5rem; }
        .email-text { font-size: 1.1rem; word-break: break-all; }
        .footer-section { padding-bottom: 2rem; }
    }
</style>